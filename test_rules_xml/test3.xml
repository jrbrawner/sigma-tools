<Rule>
    <Name>Sophisticated Security Threat Detection</Name>
    <Condition>
        <And>
            <!-- Condition 1: Multiple failed login attempts -->
            <And>
                <Field name="category">Authentication</Field>
                <Field name="outcome">Fail</Field>
                <Count operator="greaterThan">3</Count>
            </And>

            <!-- Condition 2: Access from unusual geographic location -->
            <Not>
                <Field name="geoLocation">StandardOperatingCountries</Field>
            </Not>

            <!-- Condition 3: Access to sensitive data -->
            <And>
                <Field name="resourceType">Data</Field>
                <Field name="classification">Sensitive</Field>
            </And>

            <!-- Condition 5: Connection to suspicious IP address -->
            <Or>
                <Field name="destinationIP">SuspiciousIPList</Field>
            </Or>

            <!-- Condition 6: After hours activity -->
            <Not>
                <TimeOfDay start="08:00" end="18:00" />
            </Not>
        </And>
    </Condition>
    <GroupBy>/All_Events/userName</GroupBy>
    <TimeWindow>7200</TimeWindow> <!-- Time window of 2 hours -->
    <Actions>
        <Action>
            <Type>Alert</Type>
            <Severity>High</Severity>
        </Action>
    </Actions>
</Rule>
