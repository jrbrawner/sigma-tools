<Rule>
    <Name>Potential Insider Threat Activity</Name>
    <Condition>
        <And>
            <!-- Condition for after-hours access -->
            <Or>
                <TimeOfDay start="00:00" end="06:00" />
                <TimeOfDay start="22:00" end="23:59" />
            </Or>
            
            <!-- Complex condition combining data transfer and external connections -->
            <And>
                <Field name="Category/Behavior">Data Transfer</Field>
                <Field name="destinationZone">External</Field>
                <Not>
                    <Field name="sourceZone">Trusted</Field>
                </Not>
            </And>
        </And>
    </Condition>
    <GroupBy>/All_Events/userName</GroupBy>
    <TimeWindow>3600</TimeWindow> <!-- Time window of 1 hour -->
    <Actions>
        <Action>
            <Type>Alert</Type>
            <Severity>Critical</Severity>
        </Action>
    </Actions>
</Rule>