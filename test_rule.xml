<Rule Name="ReglaCorrelacion 2" Type="Normal" ID="SWIANglwBABCEB33WUUIseg==">
    <Description>This rule detects internal events showing that one (or more) of the ASM database table spaces has a very low free space percentage. This is considered critical when the free space goes below the threshold defined in the server.properties file (by default: 2%). A notification is sent to the Database Storage Operator group.</Description>
    <Query> 
        <FromClause>
            <Table Name="Event" Alias="event1" AliasType="Positive" />
        </FromClause>
        <WhereClause TimeWindowSize="2" TimeUnit="Minute" Threshold="2">
            <Condition ConditionType="Positive" TableAlias="event1">
                <BasicCondition Operator="InZone" Condition="No" Negated="No" TableAlias="event1" IgnoreCase="Yes">
                    <Variable TableAlias="event1" />
                    <Resource ID="2woWKXF4BABCAF4c8Hm8Xdw==" URI="/All Filters/Personal/admin's Filters/PATATA" ReferenceID="6008" />
                </BasicCondition>
            </Condition> 
        </WhereClause>
        <GroupByClause>
            <Variable TableAlias="event1" Column="deviceCustomNumber1Label" />
            <Variable TableAlias="event1" Column="deviceCustomNumber1" />
        </GroupByClause>
    </Query>
    <Actions>
        <Action Event="OnFirstEvent">
            <SendToConsole />
        </Action>
        <Action Event="OnFirstEvent">
            <SetEventField EventFieldName="agentSeverity" EventFieldValue="Very-High" /> 
        </Action>
        <Action Event="OnFirstEvent" Enabled="true">
            <SendToNotifier AckRequired="Yes" NotificationMessage="ASM Database Free Space is less than 2%.">
                <Resource URI="/All Destinations/SOC Operators/" ID="0bbcmOvMAABCAGkfFgoQ8IA==" ReferenceID="1392" />
            </SendToNotifier>
        </Action>
        <Action Event="OnFirstEvent" Enabled="false">
        <CreateNewCase CaseName="ASM Database Free Space - Critical" CaseDescription="" Priority="3" Status="Unassigned">
            <CaseGroup>
                <Resource URI="/All Cases/All Cases/ArcSight System/ArcSight" ID="0fHkuwROBABCAEReec6fRLA==" ReferenceID="1393" />
            </CaseGroup>
        </CreateNewCase>
        </Action>
    </Actions>
</Rule>